{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "U.S Air Routes used Between 50 and 100 Times",
  "width": 800,
  "height": 500,
  "title": {
    "text": "No. of Times U.S Air Routes Were Used in a Year"
  },
  "params": [
    {
      "name": "Min_Count",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 13788,
        "step": 10, 
        "name": "Minimum"
      }
    },
    {
      "name": "Max_Count",
      "value": 100,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 13788,
        "step": 10, 
        "name": "Maximum"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "us-10m.json",
        "format": {
          "type": "topojson",
          "feature": "states"
        }
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "airports.csv"
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "value": 5
        },
        "color": {
          "value": "gray"
        }
      }
    },
    {
      "data": {
        "url": "flights-airport.csv"
      },
      "transform": [
        {"filter": "datum.count > Min_Count"},
        {"filter": "datum.count < Max_Count"},
        {
          "lookup": "origin",
          "from": {
            "data": {
              "url": "airports.csv"
            },
            "key": "iata",
            "fields": [
              "latitude",
              "longitude"
            ]
          },
          "as": [
            "origin_latitude",
            "origin_longitude"
          ]
        },
        {
          "lookup": "destination",
          "from": {
            "data": {
              "url": "airports.csv"
            },
            "key": "iata",
            "fields": [
              "latitude",
              "longitude"
            ]
          },
          "as": [
            "dest_latitude",
            "dest_longitude"
          ]
        }
      ],
      "projection": {
        "type": "albersUsa"
      },
      "mark": "rule",
      "encoding": {
        "longitude": {
          "field": "origin_longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "origin_latitude",
          "type": "quantitative"
        },
        "longitude2": {
          "field": "dest_longitude"
        },
        "latitude2": {
          "field": "dest_latitude"
        },
        "color": {
          "field": "count",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {}
}
